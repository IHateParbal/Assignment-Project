<Page x:Class="Assignment_Project.Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Report">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="5" Grid.Row="0">
            <Button x:Name="Employee_DirectoryButton" Content="Employee Directory" Click="Employee_DirectoryButton_Click"/>
            <Button x:Name="attendance_report" Content="Attendance" Click="attendance_report_Click"/>
            <Button x:Name="Salary_statement" Content="Salary" Click="Salary_statement_Click"/>
            <Button x:Name="termination_report" Content="Termination" Click="termination_report_Click"/>
            <Button x:Name="Training_report" Content="Training" Click="Training_report_Click"/>
        </UniformGrid>
        <Frame x:Name="ReportViewFrame" NavigationUIVisibility="Hidden" Grid.Row="1" />
        </Grid>
</Page>
