<Page x:Class="Assignment_Project.management"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assignment_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="management">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="390"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="Managenent" />
        </Grid>
            <DataGrid Grid.Row="1" AutoGenerateColumns="True" SelectionChanged="Employee_manager_Datagrid_SelectionChanged" ScrollViewer.CanContentScroll="True" Name="Employee_manager_Datagrid"/>
        <Grid Grid.Row="2" Width="400" HorizontalAlignment="Left">
            <UniformGrid Columns="3">
                <Button x:Name="Add" Content="Add Employees" Click="Add_Click"/>
                <Button x:Name="Update" Content="Update Employee" Click="Update_Click"/>
                <Button x:Name="Remove" Content="Remove Employee" Click="Remove_Click"/>
            </UniformGrid> 
        </Grid>
    </Grid>
</Page>
